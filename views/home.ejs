<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <!-- Hero Section -->
    <section class="bg-light py-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <h1 class="fw-bold">Core Blog</h1>
            <h3 class="mt-3">Publish your passions, your way </h3>
            <p class=" mt-3">
              Thoughts on technology, development, and ideas that matter.
            </p>

            <div class="mt-4 mb-4">
              <a href="/blog/latest" class="btn btn-primary me-2">
                Read Latest
              </a>
              <% if (user) { %>
              <a href="/blog/new" class="btn btn-outline-secondary">
                Write a Blog
              </a>
              <% } %>
            </div>
          </div>

          <div class="col-md-6 text-center">
            <img
              src="/images/hero-illustration.jpeg"
              class="img-fluid"
              style="height: 300px; border-radius: 50%"
              alt="Hero image"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Blogs -->
    <section class="container my-5">
      <h3 class="mb-4" id="BLOGS">Recent Posts</h3>

      <!-- Blog grid -->
      <section class="container my-5">

        <% if (blogs.length === 0) { %>
          <div class="text-center py-5">
            <h5>No blogs yet</h5>
            <p class="text-muted">Check back soon for new content.</p>
          </div>
        <% } else { %>

          <div class="row g-4">

            <% blogs.forEach(blog => { %>
              <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm blog-card">

                  <img
                    src="<%= blog.coverImageURL %>"
                    class="card-img-top"
                    alt="Blog cover"
                    style="height: 200px; object-fit: cover;"
                  />

                  <div class="card-body d-flex flex-column">

                    <small class="text-muted mb-2">
                      By <%= blog.author.fullname %> ·
                      <%= new Date(blog.createdAt).toDateString() %>
                    </small>

                    <h5 class="card-title mb-3">
                      <%= blog.title %>
                    </h5>

                    <a
                      href="/blog/<%= blog._id %>"
                      class="mt-auto text-decoration-none fw-semibold"
                    >
                      Read more →
                    </a>

                  </div>
                </div>
              </div>
            <% }) %>

          </div>

        <% } %>

      </section>
    </section>

    <!-- Why Core Blog Section -->
    <section class="bg-dark text-light py-5">
      <div class="container text-center">
        <h4 class="fw-bold">Why Core Blog?</h4>

        <p class="mt-3">
          Built by developers, for developers. Focused on performance, security,
          and clarity.
        </p>

        <div class="mt-4">
          <% if (user) { %>
          <a href="/blog/new" class="btn btn-primary me-2"> Write a Blog </a>
          <a href="/dashboard" class="btn btn-outline-light">
            Your Dashboard
          </a>
          <% } else { %>
          <a href="/user/signup" class="btn btn-primary me-2"> Get Started </a>
          <a href="/blog/latest" class="btn btn-outline-light">
            Explore Blogs
          </a>
          <% } %>
        </div>
      </div>
    </section>


    <%- include('./partials/footer') %>
  </body>
</html>
