<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <section class="bg-light py-5">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <h1 class="fw-bold">Core Blog</h1>
            <p class="text-muted mt-3">
              Thoughts on technology, development, and ideas that matter.
            </p>

            <div class="mt-4">
              <a href="/blog/latest" class="btn btn-primary me-2">
                Read Latest
              </a>
              <% if (user) { %>
              <a href="/blog/new" class="btn btn-outline-secondary">
                Write a Blog
              </a>
              <% } %>
            </div>
          </div>

          <div class="col-md-6 text-center">
            <img
              src="/images/hero-illustration.jpeg"
              class="img-fluid"
              alt="Hero image"
            />
          </div>
        </div>
      </div>
    </section>

    <section class="container my-5">
      <h3 class="mb-4">Recent Posts</h3>

      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="cover"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="text-muted small">By <%= blog.author.fullname %></p>
              <a href="/blog/<%= blog._id %>" class="stretched-link"></a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>

    <section class="bg-dark text-light py-5">
      <div class="container text-center">
        <h4>Why Core Blog?</h4>
        <p class="mt-3 text-muted">
          Built by developers, for developers. Focused on performance, security,
          and clarity.
        </p>
      </div>
    </section>

    <%- include('./partials/scripts') %>
  </body>
</html>
